
.article_box {
  display: flex;
  justify-content: space-between;
  padding-top: 10rpx;
}

.article_box .item {
  position: relative;
  height: 200rpx;
  width: calc(50% - 5px);
  margin-bottom: 15px;
}


.article_box .item > image {
  width: 100%;
  height: 100%;
}

.article_box .item .empty {
	text-align: center;
  background: rgba(0, 30, 87, 0.04);
  color: rgba(0, 30, 87, 0.1);
	height: 100%;
  width: 100%;
  line-height: 200rpx;
  font-size: 28rpx;
}

.article_box .item .text_box {
  bottom: 0;
  left: 0;
  padding: 0 0 10rpx 10rpx;
  position: absolute;
  width: 100%;
  color: #ffffff;
  z-index: 22222;
  background: rgba(0, 30, 87, 0.04);
  box-shadow: 0 3px 6px 0 rgba(0, 30, 87, 0.08);
}

.article_box .item .text_box > text {
  font-size: 26rpx;
  font-weight: bold;
}

.article_box .item .text_box > view > text {
  font-size: 24rpx;
}
.article_box .item .text_box > view > text:nth-child(1) {
  margin-right: 20rpx;
}
