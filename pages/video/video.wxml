<import src="../../templates/footer/footer.wxml"/>

<movable-area class="video_wrapper">
  <movable-view bindtap="goReleasePage" direction="all" x="{{releaseBtnObj.x}}" y="{{releaseBtnObj.y}}">
    <image src="{{releaseVideoBtn}}" mode='widthFix'></image>
  </movable-view>
  <block wx:if="{{!isLoadingVideo}}">
    <block wx:if="{{videoList.length > 0}}">
      <view class="item_box" wx:for="{{videoList}}" wx:key="{{index}}">
        <video
          src="{{item.source_url}}"
          controls
        ></video>
        <view>
          <view class="title">{{item.title.rendered}}</view>
          <view class="content">
            <image src="{{item.caption[1]}}" mode='widthFix'></image>
            <text>{{item.caption[0]}}</text>
          </view>
        </view>
      </view>
    </block>
    <view wx:else> <wux-divider text="暂无数据" /></view>
  </block>
  <block wx:else>
    <view class='item_box skeleton' wx:for="{{4}}" wx:key="index">
      <wux-skeleton>
        <wux-skeleton-paragraph rows="3" />
      </wux-skeleton>
    </view>
  </block>
  <template is="footer--template"></template>
</movable-area>