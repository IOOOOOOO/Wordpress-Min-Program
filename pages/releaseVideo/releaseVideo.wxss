.release_video_box > image {
  height: 450rpx;
  width: 100%;
}

.release_video_box > view {
  margin: 10rpx 30rpx;
}

.release_video_box > view button {
  position: fixed;
  left: 50%;
  bottom: 100rpx;
  transform: translateX(-50%);
  width: 50%;
  min-width: 200rpx;
}

.release_video_box .tips_box {
  margin-top: 50rpx;
  font-size: 30rpx;
  color: rgba(000, 000, 000, 0.6);
}

.release_video_box .tips_box > view {
  font-weight: bold;
  color: #000000;
}

.release_video_box .tips_box > view .ion {
  vertical-align: -2.5rpx;
  margin-right: 10rpx;
}

.release_video_box .input_box .wux-input {
  border: 1px solid #cccccc;
  padding: 10rpx 30rpx;
  margin-top: 50rpx;
}